# Environment configuration for AvvarI for Bharat
# Copy this file to .env and update with your values

# AWS Configuration
AWS_REGION=us-east-1
AWS_PROFILE=default

# Environment
NODE_ENV=development
ENVIRONMENT=development
LOG_LEVEL=info

# DynamoDB Table Names (auto-generated by CDK)
HERITAGE_SITES_TABLE=AvvarI-HeritageSites
ARTIFACTS_TABLE=AvvarI-Artifacts
USER_SESSIONS_TABLE=AvvarI-UserSessions
CONTENT_CACHE_TABLE=AvvarI-ContentCache
ANALYTICS_TABLE=AvvarI-Analytics

# S3 Configuration
CONTENT_BUCKET=avvari-content-bucket
CLOUDFRONT_DOMAIN=

# Amazon Bedrock Configuration
BEDROCK_TEXT_MODEL=anthropic.claude-3-sonnet-20240229-v1:0
BEDROCK_EMBEDDING_MODEL=amazon.titan-embed-text-v1

# API Configuration
API_RATE_LIMIT=1000
API_BURST_LIMIT=2000

# Content Generation Settings
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,hi,ta,te,bn,mr,gu,kn,ml,pa
CONTENT_CACHE_TTL=3600
AUDIO_QUALITY=high
VIDEO_QUALITY=720p

# Local Development
LOCAL_API_PORT=3000
LOCAL_DYNAMODB_PORT=8000