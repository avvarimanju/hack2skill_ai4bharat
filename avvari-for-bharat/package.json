{
  "name": "avvari-for-bharat",
  "version": "1.0.0",
  "description": "AI-Powered Heritage Site Digitization Platform",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "cdk": "cdk",
    "deploy": "cdk deploy --all",
    "destroy": "cdk destroy --all",
    "synth": "cdk synth",
    "diff": "cdk diff",
    "bootstrap": "cdk bootstrap",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "bundle": "esbuild src/lambdas/**/*.ts --bundle --platform=node --target=node18 --outdir=dist/lambdas",
    "local:start": "sam local start-api",
    "local:invoke": "sam local invoke"
  },
  "keywords": [
    "aws",
    "heritage",
    "ai",
    "bedrock",
    "polly",
    "lambda",
    "dynamodb",
    "s3",
    "cloudfront",
    "api-gateway"
  ],
  "author": "AvvarI Team",
  "license": "MIT",
  "devDependencies": {
    "@types/aws-lambda": "^8.10.130",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.9.0",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "aws-cdk": "^2.108.0",
    "esbuild": "^0.19.8",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "@aws-cdk/aws-apigatewayv2-alpha": "^2.108.0-alpha.0",
    "@aws-cdk/aws-apigatewayv2-integrations-alpha": "^2.108.0-alpha.0",
    "@aws-sdk/client-bedrock-runtime": "^3.456.0",
    "@aws-sdk/client-comprehend": "^3.986.0",
    "@aws-sdk/client-dynamodb": "^3.456.0",
    "@aws-sdk/client-polly": "^3.456.0",
    "@aws-sdk/client-s3": "^3.456.0",
    "@aws-sdk/client-translate": "^3.456.0",
    "@aws-sdk/lib-dynamodb": "^3.456.0",
    "@aws-sdk/util-dynamodb": "^3.456.0",
    "aws-cdk-lib": "^2.108.0",
    "constructs": "^10.3.0",
    "joi": "^17.11.0",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/index.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}
